ARG base_image=openjdk:8-jdk
FROM ${base_image}

RUN apt-get update && apt-get install --no-install-recommends -y \
    curl \
 && rm -rf /var/lib/apt/lists/*

RUN curl https://repo.spring.io/release/org/springframework/boot/spring-boot-cli/2.3.5.RELEASE/spring-boot-cli-2.3.5.RELEASE-bin.tar.gz | tar xzf - -C $HOME \
 && ln -s $HOME/spring-2.3.5.RELEASE/bin/spring /usr/local/bin
